<?xml version="1.0"?>  
<config>  
    <modules>  
        <Ves_TabsHome>  
            <version>1.1.0</version>  
        </Ves_TabsHome>  
    </modules>  
    <!-- frontend -->
    <frontend>
        <translate>
            <modules>
                <Ves_TabsHome>
                    <files>
                        <default>Ves_TabsHome.csv</default>
                    </files>
                </Ves_TabsHome>
            </modules>
        </translate>
        <layout>
            <updates>
                <tabshome>
                    <file>ves_tabshome.xml</file>
                </tabshome>
            </updates>
        </layout>
        <routers>
            <tabshome>
                <use>standard</use>
                <args>
                    <module>Ves_TabsHome</module>
                    <frontName>tabshome</frontName>
                </args>
            </tabshome>
        </routers>
    </frontend>
    <!--Global-->
    <global>  
        <blocks>
            <ves_tabshome>
                <class>Ves_TabsHome_Block</class>
            </ves_tabshome>
        </blocks>
        <models>
            <ves_tabshome>
                <class>Ves_TabsHome_Model</class>
            </ves_tabshome>
			<ves_tabshome_mysql4>
                <class>Ves_TabsHome_Model_Mysql4</class>         
            </ves_tabshome_mysql4>
        </models>
        <helpers>
            <ves_tabshome>
                <class>Ves_TabsHome_Helper</class>
            </ves_tabshome>
        </helpers>
		 <resources>
            <ves_tabshome_setup>
                <setup>
                    <module>Ves_TabsHome</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ves_tabshome_setup>
            <ves_tabshome_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ves_tabshome_write>
            <ves_tabshome_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ves_tabshome_read>
        </resources>
    </global>
    <events>
        <catalog_product_save_before>
            <observers>
                <ves_tabshome_product_changes>
                        <type>singleton</type>
                        <class>Ves_TabsHome_Model_Product_Changes</class>
                        <method>detectProductChanges</method>
                </ves_tabshome_product_changes>
            </observers>
        </catalog_product_save_before>
        <catalog_product_attribute_update_before>
            <observers>
                <ves_tabshome_product_attribute_changes>
                    <type>singleton</type>
                    <class>Ves_TabsHome_Model_Product_Changes</class>
                    <method>detectProductAttributeChanges</method>
                </ves_tabshome_product_attribute_changes>
            </observers>
        </catalog_product_attribute_update_before>
    </events>
    <admin>
        <routers>
            <tabshome>
                <use>admin</use>
                <args>
                    <module>Ves_TabsHome</module>
                    <frontName>tabshome</frontName>
                </args>
            </tabshome>
        </routers>
    </admin>
	 <adminhtml>
        <translate>
			<modules>
				<Ves_TabsHome>
					<files>
						<default>Ves_TabsHome.csv</default>
					</files>
				</Ves_TabsHome>
			</modules>
		</translate>
    </adminhtml>	
    <default>
        <ves_tabshome_info>
            <ves_tabshome>
                <theme>default</theme>
                <show>1</show>
                <load_ajax>0</load_ajax>
				<enable_jquery>0</enable_jquery>
                <enable_allproducts>0</enable_allproducts>
                <enable_feature>1</enable_feature>
                <enable_bestseller>0</enable_bestseller>
                <enable_mostview>1</enable_mostview>
                <enable_toprated>0</enable_toprated>
                <enable_new>1</enable_new>
                <enable_special>0</enable_special>
                <limit_item>6</limit_item>
                <set_time>2</set_time>
                <module_width>auto</module_width>
                <blockPosition>content</blockPosition>
                <desc_maxchar>100</desc_maxchar>
            </ves_tabshome>
            <catalog_source_setting>
                <catsid>4</catsid>       
                <limit_item>12</limit_item>
                <itemsrow>4</itemsrow>
                <itemspage>4</itemspage>   
            </catalog_source_setting>
            <order_tabs>
                <tab_allproducts>1</tab_allproducts>
                <tab_news>2</tab_news>
                <tab_featured>3></tab_featured>
                <tab_bestseller>4></tab_bestseller>
                <tab_special>5</tab_special>
                <tab_mostview>6</tab_mostview>
                <tab_toprated>7</tab_toprated>
                <tab_related>8</tab_related>
                <tab_upsell>9</tab_upsell>
            </order_tabs>
            <main_slider>
                <image_width>300</image_width>
                <image_height>300</image_height>
                <open_link>_blank</open_link>
                <max_char>100</max_char>
                <cre_main_size>0</cre_main_size>
                <tooltip_style>vs-tooltip</tooltip_style>
                <main_imgsize>home</main_imgsize>
                <limit_col>4</limit_col>
                <limit_row>2</limit_row>
                <main_height>147</main_height>
                <main_width>131</main_width>
                <show_des>1</show_des>
                <show_price>1</show_price>
                <show_price_without>1</show_price_without>
                <show_title>1</show_title>
                <show_img>1</show_img>
                <show_public_date>1</show_public_date>
                <show_btn>1</show_btn>
                <online_icon>1</online_icon>
                <feature_icon>1</feature_icon>
                <enable_new_icon>1</enable_new_icon>
                <enable_sale_icon>1</enable_sale_icon>
                <show_pzoom>1</show_pzoom>
                <enable_quickview>0</enable_quickview>
                <popup_quickview_width>60%</popup_quickview_width>
                <popup_quickview_height>80%</popup_quickview_height>
                <enable_swap>0</enable_swap>
                <swap_image_number>0</swap_image_number>
            </main_slider>
        </ves_tabshome_info>
    </default>
</config>  