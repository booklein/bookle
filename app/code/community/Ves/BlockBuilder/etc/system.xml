<?xml version="1.0"?>
<config>
    <tabs>
        <pagesbuilder translate="label" module="ves_blockbuilder">
            <label>Ves Pages Builder</label>
            <sort_order>151</sort_order>
            <class>pagesbuilder</class>
        </pagesbuilder>
    </tabs>

    <sections>
        <ves_blockbuilder>
            <label>Pages Builder</label>
            <tab>pagesbuilder</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <ves_blockbuilder>
                    <label>General Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields> 
                        <show translate="label" module="core">
                            <label>Enabled</label>
                            <sort_order>0</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show>

                        <enable_jquery translate="label" module="core">
                            <label>Enabled JQUERY</label>
                            <sort_order>5</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_jquery>

                        <enable_jquery_ui translate="label" module="core">
                            <label>Enabled JQUERY UI</label>
                            <sort_order>10</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_jquery_ui>

                         <enable_bootstrap translate="label" module="core">
                            <label>Enabled Bootstrap</label>
                            <sort_order>15</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_bootstrap>

                        <enable_tinybootstrap translate="label" module="core">
                            <label>Enabled Tiny Bootstrap</label>
                            <sort_order>20</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <comment>Tiny bootstrap is minimalist of bootstrap. It just have css code for layout grid 12 columns and responsive </comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_tinybootstrap>

                        <enable_owl translate="label" module="core">
                            <label>Enabled OWL Carousel</label>
                            <sort_order>25</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_owl>

                        <enable_colorbox translate="label" module="core">
                            <label>Enabled Colorbox Popup JS</label>
                            <sort_order>30</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_colorbox>

                        <enable_animation translate="label" module="core">
                            <label>Enabled CSS3 Animation</label>
                            <sort_order>35</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_animation>

                        <enable_holder_js translate="label" module="core">
                            <label>Enabled Image Holder Js</label>
                            <sort_order>40</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_holder_js>

                        <use_sample_elements translate="label" module="core">
                            <label>Allow Use Sample Elements CSS</label>
                            <comment>Allow/Not Allow load elements css file. skin/frontend/base/default/ves_base/elements.css</comment>
                            <sort_order>50</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_sample_elements>
                       
                        <cache_lifetime translate="label">
                            <label>Cache Life Time</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <sort_order>555</sort_order>
                            <comment>Default: 86400 ms</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cache_lifetime>
                    </fields> 
                </ves_blockbuilder>
            </groups>
        </ves_blockbuilder>
        <ves_livecss>
            <label>Live CSS Editor</label>
            <tab>pagesbuilder</tab>
            <frontend_type>text</frontend_type>
            <sort_order>20</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>General Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields> 
                        <show translate="label" module="core">
                            <label>Enabled Live Css Tool</label>
                            <comment>Enable/Disable Live CSS Tool On Frontend (only admin user can save the css profile)</comment>
                            <sort_order>0</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show>

                        <allow_save_profile translate="label" module="core">
                            <label>Allow Save Css Profile</label>
                            <comment>Enable/Disable Save Css Customize Profile On Frontend</comment>
                            <sort_order>10</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_blockbuilder/system_config_backend_builder</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allow_save_profile>

                        <css_profile translate="label">
                            <label>Select Custom Css Profile</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ves_blockbuilder/system_config_source_ListCssProfiles</source_model>
                            <comment>Select a css profile. The profile was created by live css editor tool and was stored in the folder skin/frontend/THEME_PACKAGE/THEME_DEFAULT_LAYOUT/css/customize/</comment>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </css_profile>

                    </fields>
                </general>
            </groups>
        </ves_livecss>
        <ves_feed>
            <label>Market</label>
            <tab>pagesbuilder</tab>
            <frontend_type>text</frontend_type>
            <sort_order>50</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>Page Builder Plugins</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields> 
                        <app_feed translate="label">
                            <label>Download and setup extend pages builder plugins</label>
                            <frontend_type>label</frontend_type>
                            <frontend_model>ves_blockbuilder/system_config_form_field_feed</frontend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </app_feed>
                    </fields>
                </general>
            </groups>
        </ves_feed>
    </sections>
</config>
